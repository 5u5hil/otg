<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns="http://www.w3.org/ns/widgets"     xmlns:gap="http://phonegap.com/ns/1.0"     id= "com.otg.app"     versionCode="20"     version="1.1.1" >   
    
    <name>OTG</name>
   
    <author email="support@infiniteit.biz" href="http://www.infinisystem.com/">Infini Systems</author>
    <content src="index.html"/>
    <gap:plugin name="cordova-plugin-customurlscheme" source="npm">
        <param name="URL_SCHEME" value="askaudience" />
    </gap:plugin>
    <gap:plugin name="cordova-plugin-googleplus" source="npm">
        <param name="REVERSED_CLIENT_ID" value="com.googleusercontent.apps.1000785893673-11u021sbau826fn9p425okfmokkioqgj" />
    </gap:plugin>
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="askaudience://*/*" />
    <allow-intent href="askaudience:*" />

    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="webviewbounce" value="false"/>
    <preference name="UIWebViewBounce" value="false"/>
    <preference name="DisallowOverscroll" value="true"/>
    <preference name="SplashScreenDelay" value="2000"/>
    <preference name="FadeSplashScreenDuration" value="2000"/>
    <preference name="android-minSdkVersion" value="16"/>
    <preference name="BackupWebStorage" value="none"/>
    <preference name="SplashScreen" value="screen"/>
    <preference name="AutoHideSplashScreen" value="false"/>
    <preference name="ShowSplashScreenSpinner" value="false"/>
    <preference name="orientation" value="portrait"/>
    <preference name="AndroidLaunchMode" value="singleTask" />
    <preference name="CustomURLSchemePluginClearsAndroidIntent" value="true" />
    <feature name="StatusBar">
        <param name="ios-package" onload="true" value="CDVStatusBar"/>
    </feature>
    <plugin name="cordova-plugin-device" spec="~1.1.2"/>
    <plugin name="cordova-plugin-console" spec="~1.0.3"/>
    <plugin name="cordova-plugin-whitelist" spec="~1.2.2"/>
    <plugin name="cordova-plugin-splashscreen" spec="~3.2.2"/>
    <plugin name="cordova-plugin-statusbar" spec="~2.1.3"/>
    <plugin name="ionic-plugin-keyboard" spec="~2.2.1"/>
    <plugin name="cordova-plugin-inappbrowser"/>
    <plugin name="cordova-plugin-x-socialsharing"/>
    <plugin name="cordova-plugin-x-toast"/>
    <plugin name="onesignal-cordova-plugin"/>
    <plugin name="cordova-plugin-3dtouch" />
    
    <plugin name="cordova.plugins.diagnostic" source="npm" />
        <plugin name="node-usb" source="npm" />



    <config-file platform="ios" parent="NSCameraUsageDescription" mode="replace">  
        <string>Ask Audience would like to access your Camera.</string>  
    </config-file>  
  
  
    <config-file platform="ios" parent="NSPhotoLibraryUsageDescription" mode="replace">  
        <string>Ask Audience would like to access your Photo Library.</string>  
    </config-file>  
 
    <platform name="android" />
   
  
    
    
   

    <icon src="ldpi.png" platform="android" qualifier="ldpi" />
    <icon src="mdpi.png" platform="android" qualifier="mdpi" />
    <icon src="hdpi.png" platform="android" qualifier="hdpi" />
    <icon src="xhdpi.png" platform="android" qualifier="xhdpi" />
    <icon src="xxhdpi.png" platform="android" qualifier="xxhdpi" />
    <icon src="fr-xxhdpi.png" platform="android" qualifier="fr-xxhdpi" />




    <platform name="android">
        <splash density="land-ldpi" src="splash\android\drawable-land-ldpi-screen.png" />
        <splash density="land-mdpi" src="splash\android\drawable-land-mdpi-screen.png" />
        <splash density="land-hdpi" src="splash\android\drawable-land-hdpi-screen.png" />
        <splash density="land-xhdpi" src="splash\android\drawable-land-xhdpi-screen.png" />
        <splash density="land-xxhdpi" src="splash\android\drawable-land-xxhdpi-screen.png" />
        <splash density="land-xxxhdpi" src="splash\android\drawable-land-xxxhdpi-screen.png" />
        <splash density="port-ldpi" src="splash\android\drawable-port-ldpi-screen.png" />
        <splash density="port-mdpi" src="splash\android\drawable-port-mdpi-screen.png" />
        <splash density="port-hdpi" src="splash\android\drawable-port-hdpi-screen.png" />
        <splash density="port-xhdpi" src="splash\android\drawable-port-xhdpi-screen.png" />
        <splash density="port-xxhdpi" src="splash\android\drawable-port-xxhdpi-screen.png" />
        <splash density="port-xxxhdpi" src="splash\android\drawable-port-xxxhdpi-screen.png" />
    </platform>


</widget>
